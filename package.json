{
  "name": "cqfe",
  "version": "0.0.4",
  "description": "some personal front end develop utils",
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run build",
    "release": "lerna publish --conventional-commits",
    "dev:docs": "lerna run dev --scope=@cqfe/docs",
    "publish": "lerna publish from-package --yes --loglevel=silly",
    "version": "lerna version patch",
    "lint": "eslint '**/*.{js,jsx,ts,tsx,vue}' --fix",
    "prepare": "husky"
  },
  "development": {},
  "devDependencies": {
    "@amap/amap-jsapi-loader": "^1.0.1",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-typescript": "^7.23.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@pixas/prettier-config": "^0.12.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.185",
    "@types/prompts": "^2.4.9",
    "@types/signale": "^1.4.7",
    "commitlint": "^19.4.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.1.7",
    "lint-staged": "^15.2.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3",
    "vitepress": "^1.3.2",
    "eslint": "^9.39.2"
  },
  "keywords": [
    "util",
    "hook"
  ],
  "author": "leo",
  "license": "MIT",
  "homepage": "https://cqfe.leoli.site/",
  "lint-staged": {
    "*.{js,vue,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier -c --write"
    ]
  }
}
